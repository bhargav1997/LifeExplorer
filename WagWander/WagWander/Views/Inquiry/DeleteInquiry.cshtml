@model WagWander.Models.InquiryDto

@{
    ViewBag.Title = "Delete Inquiry";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title">Delete Inquiry</h2>
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this inquiry?</h3>

                    <div class="mb-3">
                        <label class="fw-bold">Pet Name:</label> @Model.PetName
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Username:</label> @Model.Username
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Inquiry Text:</label> @Html.Raw(@Model.InquiryText)
                    </div>
                </div>
                <div class="card-footer">
                    <form method="POST" action="/Inquiry/Delete/@Model.InquiryId">
                        <input type="hidden" name="InquiryId" value="@Model.InquiryId" />
                        <div class="d-grid gap-2">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a href="/Inquiry/ListInquiries" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
