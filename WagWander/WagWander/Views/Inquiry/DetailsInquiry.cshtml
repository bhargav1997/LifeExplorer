@{
    ViewBag.Title = "Inquiry Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 mb-4">
            <a href="/Inquiry/ListInquiries" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Inquiry List
            </a>
        </div>
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white">
                    <h2 class="card-title">Inquiry Details for @Model.PetName</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="card-text"><strong>Pet Name:</strong> @Model.PetName</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Username:</strong> @Model.Username</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Inquiry Text:</strong> @Html.Raw(@Model.InquiryText)</p>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="/Inquiry/DeleteInquiry?InquiryId=@Model.InquiryId" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
