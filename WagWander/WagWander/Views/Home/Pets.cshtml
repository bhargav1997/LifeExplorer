@{
    ViewBag.Title = "Pets";
}

<div class="custom-container">
    <section class="row text-center" aria-labelledby="appTitle">
        <div class="col-md-12">
            <h1 id="appTitle" class="display-4">Welcome to PawCare</h1>
            <p class="lead">Your trusted place for adopting a new furry friend. Find your perfect pet today!</p>
            <p><a href="/Pet/List" class="btn btn-primary btn-lg">View Pet List</a></p>
        </div>
    </section>

    <div class="row mt-5">
        <section class="col-md-4" aria-labelledby="adoptionProcessTitle">
            <h2 id="adoptionProcessTitle">Adoption Process</h2>
            <p>Learn about our easy and straightforward adoption process, ensuring the best match for you and your new pet.</p>
            <p><a class="btn btn-outline-dark" href="/Pet/AdoptionProcess">Learn more &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="successStoriesTitle">
            <h2 id="successStoriesTitle">Success Stories</h2>
            <p>Read heartwarming stories from families who have adopted pets through PawCare.</p>
            <p><a class="btn btn-outline-dark" href="/Pet/SuccessStories">Learn more &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="volunteerTitle">
            <h2 id="volunteerTitle">Volunteer with Us</h2>
            <p>Join our team of dedicated volunteers and make a difference in the lives of pets waiting for their forever homes.</p>
            <p><a class="btn btn-outline-dark" href="/Pet/Volunteer">Learn more &raquo;</a></p>
        </section>
    </div>
</div>
