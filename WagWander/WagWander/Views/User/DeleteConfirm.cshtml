@model WagWander.Models.UserDto

@{
    ViewBag.Title = "Delete User";
}

<h3>Are you sure you want to delete this user?</h3>

<a class="btn btn-check mt-3" href="/User/List">Cancel</a>

<h2>@Model.UserName</h2>

<form action="/User/Delete/@Model.UserID" method="POST">
    <input class="btn btn-danger mt-3" type="submit" value="Confirm Delete" />
</form>
