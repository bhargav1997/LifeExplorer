@model WagWander.Models.PetDto
@{
    ViewBag.Title = "Edit";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h2 class="card-title">Edit Pet</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/Pet/Update/@Model.PetId">
                <input type="hidden" name="PetId" value="@Model.PetId" />

                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                </div>

                <div class="form-group">
                    <label for="Species">Species:</label>
                    <input type="text" class="form-control" id="Species" name="Species" value="@Model.Species" />
                </div>

                <div class="form-group">
                    <label for="Breed">Breed:</label>
                    <input type="text" class="form-control" id="Breed" name="Breed" value="@Model.Breed" />
                </div>

                <div class="form-group">
                    <label for="Age">Age:</label>
                    <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" />
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
