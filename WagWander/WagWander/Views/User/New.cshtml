@model WagWander.Models.User

@{
    ViewBag.Title = "Create User";
}

<h2>Add User</h2>

<form action="/User/Create" method="POST">
    <div class="form-group">
        <label for="UserName">Username:</label> <input type="text" name=UserName class="form-control"/>
    </div>
    <div>
        <label for="Bio">Bio:</label> <textarea class="form-control" name="Bio" rows="5" cols="50"> </textarea>
    </div>
    <div>
        <label for="FavoriteGenre">Favorite Genre:</label> <input type="text" name=FavoriteGenre class="form-control" />
    </div>
    <div>
        <label for="Location">Location:</label> <input type="text" name="Location" class="form-control"/>
    </div>
    <div>
        <input type="submit" value="Add User" class="mt-3 btn btn-success" />
    </div>
</form>

<div>
    <a class="btn-dark btn mt-3" href="/User/List/">Back to List</a>
</div>
